@import "../fight/fightPage.wxss";

.bg-img {
    display: block;
    position: fixed;
    width: 750rpx;
    height: 101vh;
    top: 0;
    left: 0;
    z-index: -1;
}

.scroll-box {
    display: block;
    width: 100%;
    height: 100vh;
    position: absolute;
    top: 0;
    left: 0;
}

.page {
    height: 100%;
    min-height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
}

.flex-wrp {
    height: 220rpx;
    display: flex;
    margin-top: 24rpx;
    align-content: center;
}

.flex-item {
    width: 149rpx;
    height: 220rpx;
    display: flex;
    font-size: 12pt;
    font-weight: 800;
    margin-left: 12rpx;
    margin-right: 12rpx;
    justify-content: center;
    align-items: center;
}