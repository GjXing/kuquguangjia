@import "../fight/fightPage.wxss";

.content {
    display: flex;
    flex-direction: column;
    height: 950rpx;
}

.day_item {
    width: 700rpx;
    height: 80rpx;
    margin-left: 25rpx;
    margin-right: 25rpx;
    margin-top: 25rpx;
    background-color: #f9cea1;
    border-radius: 15rpx;
    display: flex;
}

.day_num {
    width: 150rpx;
    height: 83rpx;
    margin-top: -1rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 10pt;
    color: #F5DEB3;
    background-color: #f19647;
}

.coin_num {
    width: 150rpx;
    height: 80rpx;
    text-align: center;
    margin-left: 200rpx;
    color: #FfeEd3;
    font-size: 10pt;
    margin-top: 18rpx;
}

.btn_jinbi {
    width: 380rpx;
    height: 100rpx;
    margin-top: 80rpx;
    text-align: center;
    line-height: 100rpx;
    background-color: #988d8d;
    color: #842800;
    font-weight: 600;
    border-style: solid;
    border-width: 4rpx;
    border-color: #676262;
}

.btn_hongbao {
    width: 380rpx;
    height: 100rpx;
    margin-top: 48rpx;
    line-height: 100rpx;
    align-content: center;
    background-color: #FEBE00;
    color: #ffffff;
    font-weight: 700;
    border-style: solid;
    border-width: 4rpx;
    border-color: #720638;
    font-size: 16px;
}

.web {
    width: 100%;
    height: 100rpx;
}