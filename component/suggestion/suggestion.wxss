.more-title {
    width: 100%;
    height: 50rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin: 30rpx 0 -15rpx 0;
}

.more-title text {
    font-size: 30rpx;
    font-weight: bold;
}

.more-title .line {
    width: 165rpx;
}

.more-title .fangkuai {
    width: 15rpx;
    margin: 0 10rpx;
}

.more_list {
    width: 90%;
    margin-top: 32rpx;
    margin-left: auto;
    margin-right: auto;
    display: flex;
    background-color: #a5d79b;
    color: #210a00;
    font-weight: 700;
    border-radius: 15rpx;
    align-items: center;
}

.icon {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
    margin: 22rpx;
}

.text_title {
    height: 70rpx;
    line-height: 70rpx;
    font-weight: 700;
    font-size: 40rpx;
}

.text_desc {
    font-size: 30rpx;
}

.play_btn {
    background: #8abe7f;
    line-height: 70rpx;
    padding: 0 20rpx;
    height: 70rpx;
    border-radius: 40rpx;
    color: white;
    margin-right: 20rpx;
    font-size: 30rpx;
}

.text_get {
    font-size: 24rpx;
    text-align: right;
    margin-right: 40rpx;
    color: #e22;
}